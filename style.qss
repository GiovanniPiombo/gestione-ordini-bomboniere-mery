/* ========================================
 * FOGLIO DI STILE QSS - BOMBONIERE MERY
 * VERSIONE FINALE (Tutto Rosa + Fix Win11)
 * ========================================
 */

/* --- Stile Generale --- */
QMainWindow, QWidget {
    font-family: 'Segoe UI', 'Arial', sans-serif;
    font-size: 11pt;
    background-color: qlineargradient(x1:0, y1:0, x2:1, y2:1,
                                     stop:0 #fdf6f9, stop:1 #f8f0f5);
    color: #5a4a54;
}

/* --- Titoli --- */
QLabel#titleLabel {
    font-size: 18pt;
    font-weight: bold;
    color: #b76e97;
    padding: 8px 0px;
    border-bottom: 2px solid #e6d0dc;
    margin-bottom: 15px;
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
                               stop:0 transparent, stop:0.5 #f8d7e6, stop:1 transparent);
}

QLabel {
    background-color: transparent;
    padding: 3px;
    color: #5a4a54;
}

/* --- Bottoni --- */
QPushButton {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                               stop:0 #ffffff, stop:0.1 #f8d7e6, stop:1 #d4a5c5);
    color: #5a4a54;
    border: 1px solid #e6d0dc;
    padding: 10px 18px;
    border-radius: 8px;
    font-weight: bold;
    min-width: 110px;
    min-height: 35px;
}

QPushButton:hover {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                               stop:0 #ffffff, stop:0.1 #f5ebf2, stop:1 #b76e97);
    border: 1px solid #d4a5c5;
}

QPushButton:pressed {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                               stop:0 #d4a5c5, stop:1 #b76e97);
    color: white;
}

