/* --- Campi di Input --- */
QLineEdit, QComboBox, QDateEdit, QSpinBox {
    background-color: #fffafc;
    border: 1px solid #e6d0dc;
    padding: 8px 10px;
    border-radius: 6px;
    color: #5a4a54;
    selection-background-color: #d4a5c5;
    selection-color: white;
}

QLineEdit:focus, QComboBox:focus, QDateEdit:focus, QSpinBox:focus {
    border: 2px solid #d4a5c5;
    background-color: #fffafc;
}

QComboBox::drop-down, QDateEdit::drop-down {
    border: none;
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                               stop:0 #f8d7e6, stop:1 #d4a5c5);
    border-radius: 0px 5px 5px 0px;
    width: 25px;
}

QComboBox::down-arrow, QDateEdit::down-arrow {
    width: 12px;
    height: 12px;
    color: #5a4a54;
}

/* Campi non modificabili */
QDateEdit[readOnly="true"] {
    background-color: #f8f0f5;
    color: #8c7385;
    border: 1px solid #e6d0dc;
}

/* ==========================================================
   STILE MENU A TENDINA (Fix Windows 11 + Fix Azzurro)
   ========================================================== */

QComboBox QAbstractItemView {
    background-color: #fffafc;
    border: 1px solid #d4a5c5;
    selection-background-color: #f8d7e6;
    selection-color: #5a4a54;
    padding: 4px;
    border-radius: 4px;
    outline: none;
}

QComboBox QAbstractItemView::item {
    min-height: 25px;
    color: #5a4a54;
    border: none;
    padding-left: 5px; 
}

QComboBox QAbstractItemView::item:hover {
    background-color: #f8d7e6; /* Rosa chiaro */
    color: #5a4a54;
}

QComboBox QAbstractItemView::item:selected {
    background-color: #d4a5c5; /* Rosa scuro */
    color: white;
}

/* CHECKBOX WINDOWS 11 FIX */
QComboBox QAbstractItemView::indicator {
    width: 16px;
    height: 16px;
    margin-right: 8px;
    border: 1px solid #d4a5c5;
    border-radius: 3px;
    background-color: white;
}

QComboBox QAbstractItemView::indicator:checked {
    background-color: #d4a5c5;
    border: 1px solid #b76e97;
}

QComboBox QAbstractItemView::indicator:hover {
    border: 2px solid #b76e97;
}

/* ==========================================================
   LISTA ORDINI (SEARCH PAGE) - NUOVO STILE ROSA
   ========================================================== */

QListWidget {
    background-color: #fffafc;
    border: 1px solid #e6d0dc;
    border-radius: 6px;
    outline: none; /* Rimuove il bordo tratteggiato brutto */
}

QListWidget::item {
    padding: 10px;
    border-bottom: 1px solid #f0e6ec; /* Linea leggera tra gli elementi */
    color: #5a4a54;
}

/* Quando passi il mouse sopra (Hover) */
QListWidget::item:hover {
    background-color: #f8d7e6; /* Rosa Chiaro */
    color: #5a4a54;
}

/* Quando selezioni un ordine */
QListWidget::item:selected {
    background-color: #d4a5c5; /* Rosa Scuro */
    color: white;
    border: none;
}

/* Quando l'elemento Ã¨ selezionato ma la lista perde il focus */
QListWidget::item:selected:!active {
    background-color: #e6d0dc; /* Rosa pallido */
    color: white;
}

/* ========================================================== */

/* --- TABELLA --- */
QTableWidget {
    background-color: #fffafc;
    border: 1px solid #e6d0dc;
    border-radius: 6px;
    gridline-color: #f0e6ec;
    alternate-background-color: #fdf6f9;
    selection-background-color: #d4a5c5;
    selection-color: white;
}

QHeaderView::section {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                               stop:0 #f8d7e6, stop:1 #d4a5c5);
    color: #5a4a54;
    padding: 8px;
    border: none;
    border-right: 1px solid #e6d0dc;
    font-weight: bold;
    font-size: 10pt;
}

QTableWidget::item {
    border-bottom: 1px solid #f0e6ec;
}

QTableWidget::item:selected {
    background-color: #d4a5c5;
    color: white;
}

/* Editor nella tabella */
QTableWidget QLineEdit, QTableWidget QComboBox {
    background-color: white;
    border: 1px solid #d4a5c5;
    padding: 4px 8px;
    margin: 1px;
    border-radius: 3px;
}

QTableWidget QComboBox {
    padding: 4px;
}

QTableWidget QComboBox::drop-down {
    width: 20px;
}

/* --- Scroll Area e Barre --- */
QScrollArea {
    border: none;
    background: transparent;
}

QScrollArea > QWidget > QWidget {
    background-color: #fffafc;
    border: 1px solid #e6d0dc;
    border-radius: 8px;
}

QScrollBar:vertical {
    border: none;
    background: #f5ebf2;
    width: 12px;
    border-radius: 6px;
    margin: 2px;
}

QScrollBar::handle:vertical {
    background: #d4a5c5;
    border-radius: 5px;
    min-height: 30px;
}

QScrollBar::handle:vertical:hover {
    background: #b76e97;
}

QScrollBar::add-line, QScrollBar::sub-line {
    border: none;
    background: none;
}

/* --- Form Layout Spacing --- */
QFormLayout {
    background-color: transparent;
    spacing: 8px;
}

/* --- Messaggi Box --- */
QMessageBox {
    background-color: #fffafc;
    border: 2px solid #d4a5c5;
    border-radius: 8px;
}

QMessageBox QPushButton {
    min-width: 80px;
    padding: 6px 12px;
}